{
  "id": "{{APP_ID}}",
  "runtime": "io.elementary.Platform",
  "runtime-version": "8.0",
  "sdk": "io.elementary.Sdk",
  "command": "{{APP_ID}}",
  "finish-args": [
    "--device=dri",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "{{APP_NAME}}",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}